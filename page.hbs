{{!< default}}

{{!-- This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. --}}

{{!-- Everything inside the #post tags pulls data from the page --}}
{{#post}}

<aside class="cover">
    <div class="cover-image" style="background-image:{{#if image}} url({{image}}){{else}}url({{@blog.cover}}){{/if}}; background-size: cover;"></div>
    <nav>
    <div class="cover-wrapper">
        <div class="main-header-content">
            <h1 class="page-title">{{@blog.title}} </h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
        <div class="nav-buttons">
            <div class="button" title="Home">
                <a href="/"><span class="fa fa-home"></span></a>
            </div>
            <div class="button" title="Projects">
                <a href="projects"><span class="fa fa-cogs"></span></a>
            </div>
            <div class="button" title="GitHub">
                <a href="https://github.com/ktbee"><span class="fa fa-github"></span></a>
            </div>
            <div class="button" title="RSS feed">
                <a href="/rss"><span class="fa fa-rss"></span></a>
            </div>
        </div>
    </div>
    </nav>
</aside>

<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
        </header>

        <section class="post-content">
            {{content}}
        </section>

    </article>
    {{> "footer"}}
</main>
{{/post}}
